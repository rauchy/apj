#!/usr/bin/env ruby
lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)
require 'apj'

if STDIN.tty?
  awesome_print({"Usage" => "curl https://github.com/rauchy.json | apj"})
else
  Apj.print_awesomely(STDIN.read)
end
